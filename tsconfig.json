{
   "compilerOptions": {
     "lib": ["es2015", "dom"],
     "target": "ESNext",
     "module": "commonjs",
     "moduleResolution": "node",
     "resolveJsonModule": true,
     "esModuleInterop": true,
     "allowSyntheticDefaultImports": true,
     "emitDecoratorMetadata": true,
     "experimentalDecorators": true,
     "noImplicitAny": true,
     "jsx": "react-jsx",
     "outDir": "./dist/"
   },
   "include": ["src/**/*.ts", "src/**/*.tsx"],
   "exclude": ["node_mdoules"]
 }
